@using mvcProyectoKeDulce.Modelos.Models
@model ListaPaginada<Producto>

<h2 class="text-center">Lista de Entradas</h2>
<div class="container mt-5">

@if (Model.Count() > 0)
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var producto in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@producto.ImagenUrl" class="card-img-top" alt="@producto.NombreProducto">
                    <div class="card-body">
                        <h5 class="card-title text-primary">@producto.NombreProducto</h5>
                        <p class="card-text text-dark">@producto.Descripcion</p>
                        <a asp-action="Detalle" class="btn btn-success" asp-route-id="@producto.Id">
                            Más Detalles
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No hay artículos</p>
}
</div>