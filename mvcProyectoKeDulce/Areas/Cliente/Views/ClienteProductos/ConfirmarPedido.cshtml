@model mvcProyectoKeDulce.Modelos.Models.Pedido

<div class="container mt-5">
    <h2 class="text-center">Detalle del Pedido</h2>
<p>Tu pedido ha sido confirmado con éxito.</p>
<p>Detalles del pedido:</p>
<p>Fecha del pedido: @Model.Fecha</p>
<p>Estado del pedido: @Model.Estado</p> <!-- Mostrar el estado del pedido -->

<p>Productos:</p>
<ul>
    @foreach (var detalle in Model.DetallesPedidos)
    {
        <li>
            @if (detalle.Producto != null)
            {
                <text>@detalle.Producto.NombreProducto - Cantidad: @detalle.Cantidad - Total: @detalle.Total</text>
            }
            else
            {
                <text>Producto no disponible</text>
            }
        </li>
    }
</ul>
</div>