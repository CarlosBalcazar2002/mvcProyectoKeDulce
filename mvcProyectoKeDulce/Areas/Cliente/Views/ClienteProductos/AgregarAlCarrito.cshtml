@model IEnumerable<mvcProyectoKeDulce.Modelos.Models.Producto>

@{
    ViewData["Title"] = "Carrito de compras";
}

<h2>@ViewData["Title"]</h2>

<div class="container mt-5">
    <div class="row">
        <div class="col">
            @if (Model == null || !Model.Any())
            {
                <p>El carrito está vacío.</p>
            }
            else
            {
                <h3>Productos en el carrito:</h3>
                <ul>
                    @foreach (var producto in Model)
                    {
                        <li>
                            @producto.NombreProducto - Bs.@producto.Precio
                            <a href="@Url.Action("EliminarDelCarrito", "Carrito", new { id = producto.Id })" class="btn btn-danger">Eliminar del carrito</a>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
</div>
