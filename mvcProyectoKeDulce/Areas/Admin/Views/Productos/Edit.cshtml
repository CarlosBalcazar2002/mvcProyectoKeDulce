@model mvcProyectoKeDulce.Modelos.ViewModels.ProductoVM
@{
    ViewData["Title"] = "Editar Producto";
}
<br />
<h3 class="text-center">Editar Producto</h3>
<form method="POST" asp-action="Edit" enctype="multipart/form-data">
    <!--Enviar id como campo oculto-->
    <input type="hidden" asp-for="Producto.Id" />
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-8 mt-5">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Producto.NombreProducto"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Producto.NombreProducto" class="form-control" placeholder="Ingresa el nombre del Producto" />
                    <span asp-validation-for="Producto.NombreProducto" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Producto.Descripcion"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Producto.Descripcion" class="form-control" placeholder="Ingresa la descripción del Producto" />
                    <span asp-validation-for="Producto.Descripcion" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Producto.Precio"></label>
                </div>
                <div class="col-2">
                    <input type="number" asp-for="Producto.Precio" class="form-control" placeholder="Ingresa el precio del Producto" />
                    <span asp-validation-for="Producto.Precio" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Producto.ImagenUrl"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="archivos" id="subidaArchivo" class="form-control" />
                    <span asp-validation-for="Producto.ImagenUrl" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control">Editar Producto</button>
                </div>
                &nbsp;
                <div class="col">
                    <a asp-action="Index" class="btn btn-success form-control">Volver atrás</a>
                </div>
            </div>
        </div>
        <div class="col-4 pt-3">
            <img src="@Model.Producto.ImagenUrl" width="300px" style="border-radius:5px; border:1px solid #bbb9b9" />
        </div>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}